<% include partials/header %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" id="" value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion" id="" value="<%= data.direccion %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" id="" value="<%= data.telefono %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>