<% include partials/header %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nº</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for(let i=0 ; i< data.length ; i++) { %>
                            <tr>
                                <td><%= (i+1) %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].direccion %></td>
                                <td><%= data[i].telefono %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info" ><i class="far fa-edit"></i></a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" id="" placeholder="Escribe tu nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion" id="" placeholder="Escribe tu direccion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" id="" placeholder="Escribe tu telefono" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>